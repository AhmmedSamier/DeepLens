<DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:vs="http://schemas.microsoft.com/visualstudio/extensibility/2022/xaml">
    <Grid Background="{Binding ThemeBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Header -->
        <Border Grid.Row="0" BorderBrush="{Binding ThemeBorderColor}" BorderThickness="0,0,0,1" Padding="12,12,12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DEEPLENS" FontWeight="Bold" FontSize="9" Opacity="0.5" VerticalAlignment="Center" Margin="0,1,8,0" Foreground="{Binding ThemeForegroundColor}"/>
                    <TextBlock Text="{Binding Title}" FontSize="11" VerticalAlignment="Center" Foreground="{Binding ThemeForegroundColor}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding FilterEverythingCommand}" Background="Transparent" BorderThickness="0" Margin="4,0" ToolTip="Search Everywhere">
                        <TextBlock Text="ðŸ”" FontSize="12" Foreground="{Binding ThemeForegroundColor}" Opacity="0.8"/>
                    </Button>
                    <Button Command="{Binding FilterClassesCommand}" Background="Transparent" BorderThickness="0" Margin="4,0" ToolTip="Search Classes">
                        <TextBlock Text="ðŸ“¦" FontSize="12" Foreground="{Binding ThemeForegroundColor}" Opacity="0.8"/>
                    </Button>
                    <Button Command="{Binding FilterSymbolsCommand}" Background="Transparent" BorderThickness="0" Margin="4,0" ToolTip="Search Symbols">
                        <TextBlock Text="ðŸ§©" FontSize="12" Foreground="{Binding ThemeForegroundColor}" Opacity="0.8"/>
                    </Button>
                    <Button Command="{Binding FilterFilesCommand}" Background="Transparent" BorderThickness="0" Margin="4,0" ToolTip="Search Files">
                        <TextBlock Text="ðŸ“„" FontSize="12" Foreground="{Binding ThemeForegroundColor}" Opacity="0.8"/>
                    </Button>
                    <Button Command="{Binding FilterPropertiesCommand, FallbackValue={x:Null}}" Background="Transparent" BorderThickness="0" Margin="4,0" ToolTip="Search Properties">
                        <TextBlock Text="ðŸ”§" FontSize="12" Foreground="{Binding ThemeForegroundColor}" Opacity="0.8"/>
                    </Button>
                    <Button Command="{Binding FilterEndpointsCommand, FallbackValue={x:Null}}" Background="Transparent" BorderThickness="0" Margin="4,0" ToolTip="Search Endpoints">
                        <TextBlock Text="ðŸŒ" FontSize="12" Foreground="{Binding ThemeForegroundColor}" Opacity="0.8"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Input Section -->
        <Border Grid.Row="1" Padding="12,4,12,12">
            <Border BorderBrush="#44007acc" BorderThickness="1" CornerRadius="3" Background="#08888888">
                <Grid>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="14" 
                             Padding="10,8"
                             BorderThickness="0"
                             Background="Transparent"
                             CaretBrush="#007acc"
                             Foreground="{Binding ThemeForegroundColor}"/>
                    <TextBlock Text="{Binding PlaceholderText}" 
                               IsHitTestVisible="False" 
                               Margin="12,10"
                               Opacity="0.5"
                               FontSize="14"
                               FontStyle="Italic"
                               Foreground="{Binding ThemeForegroundColor}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Border>

        <!-- Results List -->
        <ListBox Grid.Row="2" ItemsSource="{Binding Results}" 
                 Background="Transparent" BorderThickness="0"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#15888888"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#22007acc"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding NavigateCommand}" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" Padding="0">
                        <Border Padding="12,10" BorderBrush="#15888888" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding IconSymbol}" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center" 
                                           Foreground="{Binding ThemeForegroundColor}"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Label}" FontSize="13" FontWeight="SemiBold" 
                                                   Foreground="{Binding ThemeForegroundColor}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center" Opacity="0.6" 
                                                   Foreground="{Binding ThemeForegroundColor}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Detail}" FontSize="10" Margin="0,3,0,0" Opacity="0.5" TextTrimming="CharacterEllipsis" 
                                               Foreground="{Binding ThemeForegroundColor}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Progress Indicator -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" Height="2" Background="#007acc" Margin="14,0,14,1">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </Grid>
</DataTemplate>
