{
    "name": "deeplens-language-server",
    "version": "1.3.0",
    "description": "Language Server for DeepLens",
    "main": "src/server.ts",
    "scripts": {
        "build": "bun run scripts/setup-parsers.ts && bun build src/server.ts --outdir dist --target node --format cjs && bun build src/core/indexer-worker.ts --outdir dist --target node --format cjs && bun run scripts/copy-ripgrep.ts",
        "test": "bun run scripts/setup-parsers.ts && bun test",
        "benchmark": "bun run scripts/setup-parsers.ts && bun run benchmarks/index.ts",
        "benchmark:memory": "bun run scripts/memory-benchmark.ts",
        "lint": "eslint src --cache",
        "format": "prettier --write \"src/**/*.ts\" --cache"
    },
    "dependencies": {
        "@vscode/ripgrep": "^1.17.0",
        "fuzzysort": "^3.1.0",
        "glob": "^13.0.0",
        "minimatch": "^10.1.1",
        "tree-sitter-c": "^0.24.1",
        "tree-sitter-c-sharp": "^0.23.1",
        "tree-sitter-cpp": "^0.23.4",
        "tree-sitter-go": "^0.25.0",
        "tree-sitter-java": "^0.23.5",
        "tree-sitter-javascript": "^0.25.0",
        "tree-sitter-php": "^0.24.2",
        "tree-sitter-python": "^0.25.0",
        "tree-sitter-ruby": "^0.23.1",
        "tree-sitter-typescript": "^0.23.2",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12",
        "web-tree-sitter": "^0.26.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.0.3",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "eslint": "^9.39.2",
        "eslint-plugin-sonarjs": "3.0.5",
        "globals": "^17.0.0",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "typescript": "^5.9.3"
    }
}
