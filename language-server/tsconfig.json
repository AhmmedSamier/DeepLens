{
    "compilerOptions": {
        "module": "nodenext",
        "target": "ES2021",
        "outDir": "dist",
        "lib": [
            "ES2021"
        ],
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "coverage"
    ]
}
