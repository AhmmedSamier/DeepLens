{
    "name": "deeplens",
    "displayName": "DeepLens",
    "description": "Search everywhere in your workspace - types, symbols, files, and text with fuzzy matching and CamelHumps support",
    "repository": {
        "type": "git",
        "url": "https://github.com/AhmmedSamier/DeepLens.git"
    },
    "version": "1.3.0",
    "publisher": "AhmedSamir",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "search",
        "find",
        "navigation",
        "fuzzy"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "deeplens.search",
                "title": "DeepLens: Search Everywhere"
            },
            {
                "command": "deeplens.rebuildIndex",
                "title": "DeepLens: Rebuild Index"
            },
            {
                "command": "deeplens.clearIndexCache",
                "title": "DeepLens: Clear Index Cache"
            }
        ],
        "keybindings": [
            {
                "command": "deeplens.search",
                "key": "shift shift",
                "mac": "shift shift"
            },
            {
                "command": "editor.action.revealDeclaration",
                "key": "f12",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.action.peekImplementation",
                "key": "ctrl+f12",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "DeepLens",
            "properties": {
                "deeplens.excludePatterns": {
                    "type": "array",
                    "default": [
                        "**/node_modules/**",
                        "**/dist/**",
                        "**/out/**",
                        "**/.git/**",
                        "**/build/**"
                    ],
                    "description": "Glob patterns to exclude from search"
                },
                "deeplens.maxResults": {
                    "type": "number",
                    "default": 50,
                    "description": "Maximum number of results to display"
                },
                "deeplens.enableTextSearch": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable text search across files"
                },
                "deeplens.enableCamelHumps": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable CamelHumps matching (e.g., 'RFC' matches 'React.FC')"
                },
                "deeplens.respectGitignore": {
                    "type": "boolean",
                    "default": true,
                    "description": "Respect .gitignore files when indexing (recommended)"
                },
                "deeplens.searchConcurrency": {
                    "type": "number",
                    "default": 60,
                    "minimum": 1,
                    "maximum": 200,
                    "description": "Number of files to scan in parallel during text search. Higher values are faster but use more CPU/IO."
                },
                "deeplens.activity.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable personalized results based on your usage activity"
                },
                "deeplens.activity.weight": {
                    "type": "number",
                    "default": 0.3,
                    "minimum": 0,
                    "maximum": 1,
                    "description": "How much activity affects results (0=none, 0.5=balanced, 1=only activity)"
                },
                "deeplens.fileExtensions": {
                    "type": "array",
                    "default": [
                        "ts",
                        "tsx",
                        "js",
                        "jsx",
                        "py",
                        "java",
                        "cs",
                        "cpp",
                        "c",
                        "h",
                        "go",
                        "rb",
                        "php",
                        "txt"
                    ],
                    "description": "File extensions to index for search"
                },
                "deeplens.codeLens.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show reference counts above classes and functions (like Rider's Code Vision)"
                },
                "deeplens.codeLens.minRefsToShow": {
                    "type": "number",
                    "default": 0,
                    "minimum": 0,
                    "description": "Minimum number of references to display code lens (0 = show all, including 'no references')"
                },
                "deeplens.codeLens.showImplementations": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show implementation counts above classes, interfaces and methods (Ctrl+F12)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "bun run esbuild-base -- --production",
        "esbuild-base": "node esbuild.js",
        "esbuild": "bun run esbuild-base -- --sourcemap",
        "esbuild-watch": "bun run esbuild-base -- --sourcemap --watch",
        "clean": "bun run scripts/clean.ts",
        "compile": "bun run clean && bun run esbuild && cd ../language-server && bun run build && cd ../vscode-extension && bun run scripts/copy-artifacts.ts",
        "watch": "bun run esbuild-watch",
        "lint": "eslint src --cache",
        "format": "prettier --write \"src/**/*.ts\" --cache",
        "package": "vsce package --allow-missing-repository",
        "vsix": "bun run compile && bun run package",
        "test": "bun run compile && tsc -p . && node ./out/vscode-extension/src/test/runTest.js",
        "benchmark": "bun run compile && tsc -p . && node ./out/vscode-extension/src/test/runBenchmark.js"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/bun": "^1.3.5",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.0.3",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.7.1",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "eslint-plugin-sonarjs": "3.0.5",
        "glob": "^13.0.0",
        "globals": "^17.0.0",
        "mocha": "^11.7.5",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "fuzzysort": "^3.1.0",
        "tree-sitter-c": "^0.24.1",
        "tree-sitter-c-sharp": "^0.23.1",
        "tree-sitter-cpp": "^0.23.4",
        "tree-sitter-go": "^0.25.0",
        "tree-sitter-java": "^0.23.5",
        "tree-sitter-javascript": "^0.25.0",
        "tree-sitter-php": "^0.24.2",
        "tree-sitter-python": "^0.25.0",
        "tree-sitter-ruby": "^0.23.1",
        "tree-sitter-typescript": "^0.23.2",
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12",
        "web-tree-sitter": "^0.26.3"
    }
}
