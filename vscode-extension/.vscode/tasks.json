{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "bun run watch",
            "problemMatcher": {
                "owner": "typescript",
                "source": "esbuild",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "^âœ˜ \\[ERROR\\] (.*)$",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s+(.*):(\\d+):(\\d+):$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "loop": true
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[watch\\] build started",
                    "endsPattern": "^\\[watch\\] build finished"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}