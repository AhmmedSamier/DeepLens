{
    "name": "find-everywhere",
    "displayName": "Find Everywhere",
    "description": "Search everywhere in your workspace - types, symbols, files, and text with fuzzy matching and CamelHumps support (like ReSharper)",
    "version": "0.1.0",
    "publisher": "finder",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "search",
        "find",
        "navigation",
        "fuzzy",
        "resharper"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "findEverywhere.search",
                "title": "Find Everywhere"
            },
            {
                "command": "findEverywhere.rebuildIndex",
                "title": "Find Everywhere: Rebuild Index"
            },
            {
                "command": "findEverywhere.clearIndexCache",
                "title": "Find Everywhere: Clear Index Cache"
            }
        ],
        "keybindings": [
            {
                "command": "findEverywhere.search",
                "key": "shift shift",
                "mac": "shift shift"
            }
        ],
        "configuration": {
            "title": "Find Everywhere",
            "properties": {
                "findEverywhere.excludePatterns": {
                    "type": "array",
                    "default": [
                        "**/node_modules/**",
                        "**/dist/**",
                        "**/out/**",
                        "**/.git/**",
                        "**/build/**"
                    ],
                    "description": "Glob patterns to exclude from search"
                },
                "findEverywhere.maxResults": {
                    "type": "number",
                    "default": 50,
                    "description": "Maximum number of results to display"
                },
                "findEverywhere.enableTextSearch": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable text search across files"
                },
                "findEverywhere.enableCamelHumps": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable CamelHumps matching (e.g., 'RFC' matches 'React.FC')"
                },
                "findEverywhere.respectGitignore": {
                    "type": "boolean",
                    "default": true,
                    "description": "Respect .gitignore files when indexing (recommended)"
                },
                "findEverywhere.activity.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable personalized results based on your usage activity"
                },
                "findEverywhere.activity.weight": {
                    "type": "number",
                    "default": 0.3,
                    "minimum": 0,
                    "maximum": 1,
                    "description": "How much activity affects results (0=none, 0.5=balanced, 1=only activity)"
                },
                "findEverywhere.fileExtensions": {
                    "type": "array",
                    "default": [
                        "ts",
                        "tsx",
                        "js",
                        "jsx",
                        "py",
                        "java",
                        "cs",
                        "cpp",
                        "c",
                        "h",
                        "go",
                        "rb",
                        "php"
                    ],
                    "description": "File extensions to index for search"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "bun run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --cache",
        "format": "prettier --write \"src/**/*.ts\" --cache"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.0.3",
        "@types/vscode": "^1.107.0",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "eslint": "^9.39.2",
        "eslint-plugin-sonarjs": "3.0.5",
        "globals": "^17.0.0",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "fuzzysort": "^3.1.0",
        "tree-sitter-c": "^0.24.1",
        "tree-sitter-c-sharp": "^0.23.1",
        "tree-sitter-cpp": "^0.23.4",
        "tree-sitter-go": "^0.25.0",
        "tree-sitter-java": "^0.23.5",
        "tree-sitter-javascript": "^0.25.0",
        "tree-sitter-php": "^0.24.2",
        "tree-sitter-python": "^0.25.0",
        "tree-sitter-ruby": "^0.23.1",
        "tree-sitter-typescript": "^0.23.2",
        "web-tree-sitter": "^0.26.3"
    }
}