<UserControl
    x:Class="DeepLensVisualStudio.ToolWindows.SearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DeepLensVisualStudio.ToolWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  String to Visibility Converter  -->
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

        <!--  Color Definitions  -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF2B2B2B" />
        <SolidColorBrush x:Key="MediumBackground" Color="#FF3C3F41" />
        <SolidColorBrush x:Key="LightBackground" Color="#FF45494A" />
        <SolidColorBrush x:Key="SelectedBackground" Color="#FF4E5254" />
        <SolidColorBrush x:Key="HoverBackground" Color="#FF4B6EAF" />
        <SolidColorBrush x:Key="BorderColor" Color="#FF2B2B2B" />
        <SolidColorBrush x:Key="ForegroundColor" Color="#FFAFAFAF" />
        <SolidColorBrush x:Key="WhiteColor" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="SubtleText" Color="#FF787878" />
        <SolidColorBrush x:Key="AccentBlue" Color="#FF4A90E2" />
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#252526" />
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E" />
        <SolidColorBrush x:Key="SearchBackgroundBrush" Color="#333333" />
        <SolidColorBrush x:Key="HighlightBrush" Color="#007ACC" />
        <SolidColorBrush x:Key="HighlightTextBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="#F1F1F1" />
        <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#969696" />

        <!--  Tab Button Style  -->
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="Border"
                            Margin="2,0"
                            Padding="16,8"
                            Background="Transparent"
                            BorderThickness="0"
                            CornerRadius="4,4,0,0">
                            <TextBlock
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{StaticResource ForegroundColor}"
                                Text="{TemplateBinding Content}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource SelectedBackground}" />
                                <Setter TargetName="Border" Property="TextBlock.Foreground"
                                        Value="{StaticResource WhiteColor}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource LightBackground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ListBox Item Style  -->
        <Style x:Key="ResultItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="Border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource HoverBackground}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource SelectedBackground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="4" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!--  Main Container with Shadow  -->
    <Border
        Background="{StaticResource MediumBackground}"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="1"
        CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Direction="270"
                Opacity="0.5"
                ShadowDepth="5"
                Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Tab Bar  -->
            <Border
                Grid.Row="0"
                Background="{StaticResource MediumBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                CornerRadius="8,8,0,0">
                <StackPanel Margin="8,8,8,0" Orientation="Horizontal">
                    <RadioButton
                        Content="All"
                        GroupName="SearchTabs"
                        IsChecked="{Binding FilterAll, Mode=TwoWay}"
                        Style="{StaticResource TabButtonStyle}" />
                    <RadioButton
                        Content="Classes"
                        GroupName="SearchTabs"
                        IsChecked="{Binding FilterClasses, Mode=TwoWay}"
                        Style="{StaticResource TabButtonStyle}" />
                    <RadioButton
                        Content="Symbols"
                        GroupName="SearchTabs"
                        IsChecked="{Binding FilterSymbols, Mode=TwoWay}"
                        Style="{StaticResource TabButtonStyle}" />
                    <RadioButton
                        Content="Files"
                        GroupName="SearchTabs"
                        IsChecked="{Binding FilterFiles, Mode=TwoWay}"
                        Style="{StaticResource TabButtonStyle}" />
                    <RadioButton
                        Content="Text"
                        GroupName="SearchTabs"
                        IsChecked="{Binding FilterText, Mode=TwoWay}"
                        Style="{StaticResource TabButtonStyle}" />
                    <RadioButton
                        Content="Endpoints"
                        GroupName="SearchTabs"
                        IsChecked="{Binding FilterEndpoints, Mode=TwoWay}"
                        Style="{StaticResource TabButtonStyle}" />
                </StackPanel>
            </Border>

            <!--  Search Input Area  -->
            <Border
                Grid.Row="1"
                Padding="12"
                Background="{StaticResource LightBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Search Icon  -->
                    <Path
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                        Fill="{StaticResource ForegroundColor}"
                        Stretch="Uniform" />

                    <!--  Search TextBox  -->
                    <TextBox
                        Name="SearchTextBox"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        CaretBrush="{StaticResource WhiteColor}"
                        FontSize="14"
                        Foreground="{StaticResource WhiteColor}"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />

                    <!--  Clear Button  -->
                    <Button
                        x:Name="ClearSearchButton"
                        Grid.Column="2"
                        Width="24"
                        Height="24"
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ClearSearchButton_Click"
                        Cursor="Hand"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="12"
                        Foreground="{StaticResource ForegroundColor}"
                        Content="&#xE711;"
                        ToolTip="Clear search"
                        Visibility="{Binding SearchQuery, Converter={StaticResource StringToVisibilityConverter}}" />
                </Grid>
            </Border>

            <!--  Results List  -->
            <ListBox
                x:Name="ResultsList"
                Grid.Row="2"
                Margin="10,5,10,0"
                Background="{StaticResource MediumBackground}"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource ResultItemStyle}"
                ItemsSource="{Binding Results}"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedItem="{Binding SelectedResult}"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.VirtualizationMode="Recycling">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Icon  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.RowSpan="1"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                Foreground="{StaticResource ForegroundBrush}"
                                Text="{Binding KindIcon}" />

                            <!--  Name and Partial Path  -->
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,8,0"
                                    FontSize="14"
                                    Foreground="{StaticResource ForegroundBrush}"
                                    Text="{Binding Name}" />

                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    FontSize="13"
                                    Foreground="{StaticResource SecondaryForegroundBrush}"
                                    Text="{Binding DirectoryPath}"
                                    TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <!--  Full Path (Second Line)  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="6,4,0,0"
                                FontSize="12"
                                Foreground="{StaticResource SecondaryForegroundBrush}"
                                Text="{Binding RelativePath}"
                                TextTrimming="CharacterEllipsis" />

                            <!--  Actions (Hover)  -->
                            <StackPanel
                                x:Name="ActionPanel"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal"
                                Visibility="Hidden">
                                <Button
                                    Command="{Binding CopyPathCommand}"
                                    Content="&#xE8C8;"
                                    Style="{StaticResource ActionButtonStyle}"
                                    ToolTip="Copy Path" />
                                <Button
                                    Command="{Binding RevealInExplorerCommand}"
                                    Content="&#xE838;"
                                    Style="{StaticResource ActionButtonStyle}"
                                    ToolTip="Open Folder" />
                            </StackPanel>

                        </Grid>
                        <DataTemplate.Triggers>
                            <!--  Show actions on hover OR selection  -->
                            <DataTrigger
                                Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                Value="True">
                                <Setter TargetName="ActionPanel" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                Value="True">
                                <Setter TargetName="ActionPanel" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  Status Bar (Sticky at Bottom)  -->
            <Border
                Grid.Row="3"
                Padding="12,8"
                Background="{StaticResource MediumBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="{StaticResource SecondaryForegroundBrush}"
                    Text="{Binding StatusText}" />
            </Border>
        </Grid>
    </Border>
</UserControl>

